@using Secyud.Abp.Secits.AspNetCore.Components.Navigation
@using Secyud.Abp.Secits.AspNetCore.Components.Toolbars
@using Secyud.Abp.Secits.Blazor.Components
@using Secyud.Secits.Blazor.JSInterop
@inject IAppDocument Document
<div class="sc-body"
     @onclick="Document.ClickAsync"
     @onmousemove="Document.MoveAsync"
     @onmouseleave="Document.LeaveAsync"
     @onmouseup="Document.UpAsync"
     @onmousedown="Document.DownAsync">
    <MainLayoutMenu Class="sc-pin-menu left" Name="Left">
        <MainMenu/>
    </MainLayoutMenu>

    <ErrorBoundary>
        <ChildContent>
            @ChildContent
        </ChildContent>
        <ErrorContent>
            <div class="sc-error-content">
                <a class="help-link" href="@context.HelpLink"> @context.HelpLink</a>
                <div class="error-message">
                    @context.Message
                </div>
                <div class="stack-trace">
                    @context.StackTrace
                </div>
            </div>
        </ErrorContent>
    </ErrorBoundary>

    <MainLayoutMenu Class="sc-pin-menu right" Name="Right">
        <MainToolbar/>
    </MainLayoutMenu>

    <UiPageProgress/>
    <UiMessageAlert/>
    <UiNotificationAlert/>
</div>

@code
{
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
