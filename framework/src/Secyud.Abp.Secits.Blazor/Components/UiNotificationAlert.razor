<SFloater Class="ui-notify">

    @GenerateNotifications()

</SFloater>

@code
{
    RenderFragment GenerateNotificationCard(UiNotification notify) =>
        @<SCard @key="notify.Index" Theme="notify.Theme">
            <Header>
                @notify.Title
            </Header>
            <Body>
            @notify.Message
            </Body>
            <Footer>
                <SButton Click="@(() => CloseNotificationAsync(notify))">
                    <AddTemplate>
                        @notify.ButtonText
                    </AddTemplate>
                </SButton>
            </Footer>
        </SCard>;
}
