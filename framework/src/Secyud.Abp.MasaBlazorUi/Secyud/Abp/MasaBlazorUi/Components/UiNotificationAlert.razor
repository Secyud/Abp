@namespace Secyud.Abp.MasaBlazorUi.Components
@implements IDisposable

<MSnackbar @bind-Value="NotificationVisible"
           Timeout="4096" Bottom Right>
    <ChildContent>
        <MSubheader>
            <MIcon Color="@NotificationColor">
                @NotificationIcon
            </MIcon>
            @Title
        </MSubheader>
        @Message
    </ChildContent>
    <ActionContent>
        <MButton Text OnClick="() => NotificationVisible = false">
            @OkButtonText
        </MButton>
    </ActionContent>
</MSnackbar>