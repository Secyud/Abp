@using Secyud.Abp.AspNetCore.Components.Components
@using Secyud.Abp.AspNetCore.Navigation
@using Secyud.Abp.Secits.Blazor.Components
@inherits LayoutComponentBase

<div class="secits-body">

    <div class="@LftMenuClass()">
        @GenerateLayoutLftMenu()
    </div>

    <div class="@RhtMenuClass()">
        @GenerateLayoutRhtMenu()
    </div>

    <div class="secits-container">
        <LayoutHook Name="@Volo.Abp.Ui.LayoutHooks.LayoutHooks.Body.First"
                    Layout="@StandardLayouts.Application"/>
        @Body
        <LayoutHook Name="@Volo.Abp.Ui.LayoutHooks.LayoutHooks.Body.Last"
                    Layout="@StandardLayouts.Application"/>
        <DynamicLayoutComponent/>
    </div>
    
    <UiPageProgress/>
    <UiMessageAlert/>
    <UiNotificationAlert/>

    <div class="secits-footer">
        @GenerateLayoutFooter()
    </div>
    
</div>

@code
{
    RenderFragment GenerateLayoutLftMenu() =>
        __builder =>
        {
            <MainMenu/>
        };
    RenderFragment GenerateLayoutRhtMenu() => __builder => { };
    RenderFragment GenerateLayoutFooter() => __builder => { };
}
