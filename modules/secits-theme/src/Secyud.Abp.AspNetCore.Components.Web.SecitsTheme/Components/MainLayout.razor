@using Secyud.Abp.AspNetCore.Navigation
@using Secyud.Abp.Secits.Blazor.Components
@inherits LayoutComponentBase

<div class="sc-body">

    <LayoutMenu Class="sc-lft-menu">
        @GenerateLayoutLftMenu()
    </LayoutMenu>

    <div class="sc-container">
        <ErrorBoundary>
            <ChildContent>
                @if (SectsThemeOptions.Value.UseApplicationTabs)
                {
                    <TabRouterView/>
                }
                else
                {
                    <LayoutHook Name="@Volo.Abp.Ui.LayoutHooks.LayoutHooks.Body.First"
                                Layout="@StandardLayouts.Application"/>
                    @Body
                    <LayoutHook Name="@Volo.Abp.Ui.LayoutHooks.LayoutHooks.Body.Last"
                                Layout="@StandardLayouts.Application"/>
                    <DynamicLayoutComponent/>
                }
            </ChildContent>
            <ErrorContent>
                <div class="sc-error-content">
                    <a class="help-link" href="@context.HelpLink"> @context.HelpLink</a>
                    <div class="error-message">
                        @context.Message
                    </div>
                    <div class="stack-trace">
                        @context.StackTrace
                    </div>
                </div>
            </ErrorContent>
        </ErrorBoundary>

        <div class="sc-footer">
            @GenerateLayoutFooter()
        </div>
    </div>

    <LayoutMenu Class="sc-rht-menu">
        @GenerateLayoutRhtMenu()
    </LayoutMenu>

    <UiPageProgress/>
    <UiMessageAlert/>
    <UiNotificationAlert/>
</div>

@code
{
    RenderFragment GenerateLayoutLftMenu() =>
        __builder =>
        {
            <MainMenu/>
        };

    RenderFragment GenerateLayoutRhtMenu() => __builder => { };
    RenderFragment GenerateLayoutFooter() => __builder => { };
}
