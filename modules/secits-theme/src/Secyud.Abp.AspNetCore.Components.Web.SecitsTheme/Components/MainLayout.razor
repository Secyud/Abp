@using Secyud.Abp.AspNetCore.Navigation
@using Secyud.Abp.AspNetCore.Toolbars
@using Secyud.Abp.Secits.Blazor.Components
@inherits LayoutComponentBase
<SApp Class="sc-body">
    <LayoutMenu Class="sc-pin-menu left">
        @GenerateLayoutLftMenu()
    </LayoutMenu>

    <ErrorBoundary>
        <ChildContent>
            @if (SectsThemeOptions.Value.UseApplicationTabs)
            {
                <TabRouterView Class="sc-container"/>
            }
            else
            {
                <div class="sc-container">
                    <MainLayoutBody>
                        @Body
                    </MainLayoutBody>
                </div>
            }
        </ChildContent>
        <ErrorContent>
            <div class="sc-error-content">
                <a class="help-link" href="@context.HelpLink"> @context.HelpLink</a>
                <div class="error-message">
                    @context.Message
                </div>
                <div class="stack-trace">
                    @context.StackTrace
                </div>
            </div>
        </ErrorContent>
    </ErrorBoundary>

    <LayoutMenu Class="sc-pin-menu right">
        @GenerateLayoutRhtMenu()
    </LayoutMenu>

    <UiPageProgress/>
    <UiMessageAlert/>
    <UiNotificationAlert/>
</SApp>

@code
{
    RenderFragment GenerateLayoutLftMenu() =>
        __builder =>
        {
            <MainMenu/>
        };

    RenderFragment GenerateLayoutRhtMenu() =>
        __builder =>
        {
            <MainToolbar/>
        };
}
