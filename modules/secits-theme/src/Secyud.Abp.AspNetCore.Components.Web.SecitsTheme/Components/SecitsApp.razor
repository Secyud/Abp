@using Secyud.Abp.AspNetCore.Navigation
@using Secyud.Abp.AspNetCore.Toolbars
@using Secyud.Abp.Secits.Blazor.Components
@using Secyud.Secits.Blazor.JSInterop
@inject IAppDocument Document
<div class="sc-body"
     @onclick="Document.ClickAsync"
     @onmousemove="Document.MoveAsync"
     @onmouseleave="Document.LeaveAsync"
     @onmouseup="Document.UpAsync"
     @onmousedown="Document.DownAsync">
    <LayoutMenu Class="sc-pin-menu left" Name="Left">
        @GenerateLayoutLftMenu()
    </LayoutMenu>

    <ErrorBoundary>
        <ChildContent>
            @ChildContent
        </ChildContent>
        <ErrorContent>
            <div class="sc-error-content">
                <a class="help-link" href="@context.HelpLink"> @context.HelpLink</a>
                <div class="error-message">
                    @context.Message
                </div>
                <div class="stack-trace">
                    @context.StackTrace
                </div>
            </div>
        </ErrorContent>
    </ErrorBoundary>

    <LayoutMenu Class="sc-pin-menu right" Name="Right">
        @GenerateLayoutRhtMenu()
    </LayoutMenu>

    <UiPageProgress/>
    <UiMessageAlert/>
    <UiNotificationAlert/>
</div>

@code
{
    RenderFragment GenerateLayoutLftMenu() =>
        __builder =>
        {
            <MainMenu/>
        };

    RenderFragment GenerateLayoutRhtMenu() =>
        __builder =>
        {
            <MainToolbar/>
        };

    [Parameter] public RenderFragment? ChildContent { get; set; }
}
