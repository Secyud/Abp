<Project Sdk="Microsoft.NET.Sdk.Razor">

    <Import Project="..\..\common.props"/>

    <PropertyGroup>
        <CopyLocalLockFileAssemblies>True</CopyLocalLockFileAssemblies>
        <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../../../../framework/src/Secyud.Abp.AspNetCore.Components.Web.Theming/Secyud.Abp.AspNetCore.Components.Web.Theming.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="$(DotnetVersion)"/>
        <PackageReference Include="Volo.Abp.Localization" Version="$(AbpVersion)"/>
        <PackageReference Include="Volo.Abp.VirtualFileSystem" Version="$(AbpVersion)"/>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Localization\**\*.json"/>
        <Content Remove="Localization\**\*.json"/>
    </ItemGroup>
    
</Project>
