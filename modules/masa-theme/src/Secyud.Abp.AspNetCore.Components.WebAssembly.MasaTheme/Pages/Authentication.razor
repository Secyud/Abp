@page "/Account/{action}"
@using Masa.Blazor
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using Secyud.Abp.AspNetCore.Components.Web.MasaTheme.Components
@inherits Volo.Abp.AspNetCore.Components.AbpComponentBase

<MCard>
    <MCardText>
        <RemoteAuthenticatorView Action="@Action">
            <LoggingIn>
                <LoadingIndicator/>
            </LoggingIn>
            <CompletingLoggingIn>
                <LoadingIndicator/>
            </CompletingLoggingIn>
            <LogOut>
                <LoadingIndicator/>
            </LogOut>
            <CompletingLogOut>
                <LoadingIndicator/>
            </CompletingLogOut>
            <LogOutSucceeded>
                @L["Authentication:YouAreLoggedOut"]
            </LogOutSucceeded>
        </RemoteAuthenticatorView>
    </MCardText>
</MCard>