@page "/Account/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inherits Volo.Abp.AspNetCore.Components.AbpComponentBase

<Card>
    <CardBody>
        <RemoteAuthenticatorView Action="@Action">
            <LoggingIn>
                <LoadingIndicator/>
            </LoggingIn>
            <CompletingLoggingIn>
                <LoadingIndicator/>
            </CompletingLoggingIn>
            <LogOut>
                <LoadingIndicator/>
            </LogOut>
            <CompletingLogOut>
                <LoadingIndicator/>
            </CompletingLogOut>
            <LogOutSucceeded>
                 @L["Authentication:YouAreLoggedOut"]
            </LogOutSucceeded>
        </RemoteAuthenticatorView>
    </CardBody>
</Card>
