@namespace Secyud.Abp.Pages.CodeDocsManagement
@inherits CodeDocsComponentBase


<MCard>
    <MCardTitle>
        @L["FunctionParameter"]
    </MCardTitle>
    <MCardText>
        <MDataTable TItem="FunctionParameterDto"
                    Items="FunctionDto?.Parameters"
                    Headers="TableHeaders"
                    ItemsPerPage="10">
            <TopContent>
                <MButton OnClick="OnOpenAddModalAsync">
                    <MIcon>@IconName.Create</MIcon>
                    @L["Add"]
                </MButton>
            </TopContent>
            <ItemColContent>
                @if (context.Header.Value == "actions")
                {
                    <MIcon Small
                           OnClick="() => RemoveFunctionParameterAsync(context.Item.Name)">
                        @IconName.Delete
                    </MIcon>
                }
                else
                {
                    @context.Value
                }
            </ItemColContent>
        </MDataTable>
    </MCardText>
</MCard>

